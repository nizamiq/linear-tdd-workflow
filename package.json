{
  "name": "linear-tdd-workflow",
  "version": "1.3.0",
  "description": "Linear TDD Workflow System - Autonomous Clean Code Development with Test-Driven Excellence",
  "main": "index.js",
  "scripts": {
    "test": "jest --coverage --verbose --passWithNoTests",
    "test:watch": "jest --watch",
    "test:unit": "jest --testPathPattern=tests/unit --coverage",
    "test:unit:python": "python scripts/python-test-runner.py coverage --files src/**/*.py",
    "test:integration": "jest --testPathPattern=tests/integration --coverage",
    "test:e2e": "jest --testPathPattern=tests/e2e --runInBand",
    "test:ci": "jest --coverage --ci --reporters=default --reporters=jest-junit",
    "test:mutation": "stryker run",
    "test:mutation:python": "python scripts/python-test-runner.py mutation",
    "test:tdd:js": "node scripts/tdd-gate-enforcer.js validate",
    "test:tdd:python": "python scripts/python-test-runner.py tdd",
    "build": "tsc",
    "lint": "eslint . --ext .js,.ts --fix",
    "lint:check": "eslint . --ext .js,.ts",
    "format": "prettier --write \"**/*.{js,ts,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,ts,json,md}\"",
    "typecheck": "tsc --noEmit",
    "precommit": "npm run lint:check && npm run format:check && npm run test:unit",
    "setup": "npm install && npm run create:env",
    "create:env": "node .claude/scripts/create-env.js",
    "claude:info": "node .claude/cli.js info",
    "claude:status": "node .claude/cli.js status",
    "claude:setup": "node .claude/setup.js",
    "assess": "node .claude/scripts/core/memory-safe-router.js assess",
    "assess:incremental": "node .claude/scripts/core/memory-safe-router.js --scope changed",
    "assess:full": "node .claude/scripts/core/memory-safe-router.js --scope full",
    "plan": "node scripts/generate-action-plan.js",
    "execute": "node scripts/execute-improvements.js",
    "execute:fixpack": "node .claude/scripts/core/agent-command-router.js implement",
    "tdd:validate": "node .claude/git-hooks/tdd-gate-enforcer.js",
    "tdd:validate:full": "node .claude/git-hooks/tdd-gate-enforcer.js --verbose",
    "pattern:extract": "node scripts/extract-patterns.js",
    "pattern:validate": "node scripts/validate-patterns.js",
    "linear:test-connection": "node .claude/cli.js linear:test-connection",
    "linear:sync": "node .claude/cli.js linear:sync",
    "linear:status": "node .claude/cli.js linear:status",
    "linear:create-issues": "node .claude/scripts/linear/create-linear-issues.js",
    "linear:update": "node .claude/scripts/linear/update-linear-progress.js",
    "linear:cycles": "node .claude/scripts/linear/linear-cycle-planning.js",
    "monitor:pipeline": "node scripts/monitor-pipeline.js",
    "monitor:budget": "node scripts/monitor-budget.js",
    "workflow:validate": "node scripts/validate-workflow.js",
    "fil:classify": "node scripts/fil-classifier.js",
    "cleanup:processes": "node .claude/scripts/cleanup-processes.js",
    "journey:coverage": "node .claude/journeys/jr7-coverage-verification.js",
    "coverage:validate": "node .claude/scripts/coverage/spec-validator.js",
    "coverage:audit": "node .claude/scripts/coverage/test-mapper.js",
    "coverage:gaps": "node .claude/scripts/coverage/gap-analyzer.js",
    "tdd:check": "node .claude/scripts/coverage/tdd-analyzer.js",
    "coverage:report": "npm run coverage:validate -- --detailed --output markdown",
    "cleanup:processes:force": "node .claude/scripts/cleanup-processes.js --force",
    "cleanup:processes:check": "node .claude/scripts/cleanup-processes.js --check",
    "journey:onboard": "node .claude/journeys/jr1-onboarding.js",
    "journey:assess": "node .claude/journeys/jr2-assessment.js",
    "journey:fix-pack": "node .claude/journeys/jr3-fix-pack.js",
    "journey:ci-recovery": "node .claude/journeys/jr4-ci-recovery.js",
    "journey:pattern": "node .claude/journeys/jr5-pattern-mining.js",
    "journey:release": "node .claude/journeys/jr6-release.js",
    "journey:list": "node .claude/cli.js journey list",
    "journey:status": "node .claude/cli.js journey status",
    "guardian": "node .claude/cli.js guardian",
    "scholar": "node .claude/cli.js scholar",
    "release": "node .claude/cli.js release",
    "validator": "node .claude/cli.js validator",
    "cycle:analyze": "node .claude/scripts/cycle/cycle-analyzer.js",
    "cycle:plan": "node .claude/scripts/cycle/cycle-planner.js",
    "cycle:align": "node .claude/scripts/cycle/work-aligner.js",
    "cycle:ready": "node .claude/scripts/cycle/readiness-checker.js",
    "cycle:full": "npm run cycle:analyze && npm run cycle:plan && npm run cycle:align && npm run cycle:ready",
    "docs:validate": "bash scripts/validate-docs.sh",
    "docs:validate:links": "bash scripts/validate-docs.sh --check-links",
    "docs:validate:examples": "bash scripts/validate-docs.sh --check-examples",
    "docs:validate:xrefs": "bash scripts/validate-docs.sh --check-xrefs",
    "docs:fix": "bash scripts/validate-docs.sh --fix",
    "docs:generate-api": "node scripts/generate-api-docs.js",
    "docs:audit": "bash scripts/validate-docs.sh && node scripts/generate-api-docs.js"
  },
  "keywords": [
    "tdd",
    "test-driven-development",
    "clean-code",
    "linear",
    "gitflow",
    "ci-cd"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.30",
    "@types/node-fetch": "^2.6.11",
    "@typescript-eslint/eslint-plugin": "^7.3.1",
    "@typescript-eslint/parser": "^7.3.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^27.9.0",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.2"
  },
  "dependencies": {
    "@linear/sdk": "^28.0.0",
    "commander": "^12.0.0",
    "dotenv": "^16.4.5",
    "js-yaml": "^4.1.0",
    "node-fetch": "^2.7.0",
    "winston": "^3.13.0",
    "zod": "^3.22.4"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/tests"
    ],
    "testMatch": [
      "**/__tests__/**/*.+(ts|tsx|js)",
      "**/?(*.)+(spec|test).+(ts|tsx|js)"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "collectCoverageFrom": [
      "scripts/**/*.{js,ts}",
      "!**/*.d.ts",
      "!**/index.{js,ts}"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  }
}