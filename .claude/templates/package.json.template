{
  "name": "{{PROJECT_NAME}}",
  "version": "1.0.0",
  "description": "{{PROJECT_DESCRIPTION}}",
  "main": "{{MAIN_FILE}}",
  "scripts": {
    "test": "jest --coverage --verbose",
    "test:watch": "jest --watch",
    "test:unit": "jest --testPathPattern=tests/unit --coverage",
    "test:integration": "jest --testPathPattern=tests/integration --coverage",
    "test:e2e": "jest --testPathPattern=tests/e2e --runInBand",
    "test:mutation": "stryker run",
    "test:tdd": "node .claude/scripts/core/tdd-gate-enforcer.js validate",
    "build": "{{BUILD_COMMAND}}",
    "lint": "eslint . --ext .js,.ts --fix",
    "lint:check": "eslint . --ext .js,.ts",
    "format": "prettier --write \"**/*.{js,ts,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,ts,json,md}\"",
    "typecheck": "{{TYPECHECK_COMMAND}}",
    "precommit": "npm run lint:check && npm run format:check && npm run test:unit",
    "claude": "node .claude/cli.js",
    "claude:assess": "node .claude/cli.js assess",
    "claude:fix": "node .claude/cli.js fix",
    "claude:test": "node .claude/cli.js test",
    "claude:status": "node .claude/cli.js status",
    "claude:setup": "node .claude/setup.js",
    "agents:status": "node .claude/scripts/monitoring/agent-status.js",
    "agents:validate": "node .claude/scripts/core/tool-permission-validator.js check-all",
    "linear:test-connection": "node .claude/cli.js linear:test-connection",
    "linear:sync": "node .claude/cli.js linear:sync",
    "linear:status": "node .claude/cli.js linear:status",
    "validate": "node .claude/cli.js validate"
  },
  "keywords": [
    "{{KEYWORDS}}"
  ],
  "author": "{{AUTHOR}}",
  "license": "{{LICENSE}}",
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.30",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "commander": "^12.0.0",
    "js-yaml": "^4.1.0"
  },
  "dependencies": {},
  "engines": {
    "node": ">=18.0.0"
  },
  "jest": {
    "preset": "{{JEST_PRESET}}",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/tests"
    ],
    "testMatch": [
      "**/__tests__/**/*.+(ts|tsx|js)",
      "**/?(*.)+(spec|test).+(ts|tsx|js)"
    ],
    "transform": {
      "^.+\\\\.(ts|tsx)$": "{{TEST_TRANSFORM}}"
    },
    "collectCoverageFrom": [
      "src/**/*.{js,ts}",
      "!**/*.d.ts",
      "!**/index.{js,ts}"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  }
}