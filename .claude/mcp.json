{
  "mcpServers": {
    "sequential-thinking": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-sequential-thinking"],
      "description": "Advanced problem-solving and reasoning for complex refactoring decisions"
    },
    "context7": {
      "type": "sse",
      "url": "https://mcp.context7.com/sse",
      "description": "Code search and understanding across large codebases"
    },
    "playwright": {
      "command": "npx",
      "args": ["@playwright/mcp@latest"],
      "description": "End-to-end testing and browser automation"
    },
    "linear-server": {
      "type": "sse",
      "url": "https://mcp.linear.app/sse",
      "headers": {
        "Authorization": "Bearer ${LINEAR_API_KEY}"
      },
      "description": "Linear.app integration for task management",
      "allowedAgents": ["strategist"],
      "blockAllOthers": true
    },
    "timeserver": {
      "type": "http",
      "url": "https://mcp.andybrandt.net/timeserver",
      "description": "Time scheduling and cron job management"
    }
  },
  "configuration": {
    "maxConcurrentServers": 5,
    "defaultTimeout": 30000,
    "retryPolicy": {
      "maxAttempts": 3,
      "backoffMultiplier": 2,
      "initialDelay": 1000
    },
    "resourceLimits": {
      "maxMemory": "512MB",
      "maxCpu": "0.5",
      "maxConnections": 10
    }
  },
  "agentPermissions": {
    "strategist": {
      "mcpServers": ["linear-server", "timeserver"],
      "description": "Only agent allowed to use Linear for task management"
    },
    "auditor": {
      "mcpServers": ["context7", "sequential-thinking"],
      "description": "Code analysis and reasoning for assessments"
    },
    "executor": {
      "mcpServers": ["context7"],
      "description": "Code understanding for implementation"
    },
    "guardian": {
      "mcpServers": [],
      "description": "CI/CD monitoring without external dependencies"
    },
    "scholar": {
      "mcpServers": ["sequential-thinking"],
      "description": "Pattern recognition and learning"
    },
    "tester": {
      "mcpServers": ["playwright"],
      "description": "E2E test creation"
    },
    "validator": {
      "mcpServers": ["playwright"],
      "description": "E2E test execution and validation"
    },
    "linter": {
      "mcpServers": [],
      "description": "Code formatting without external dependencies"
    },
    "typechecker": {
      "mcpServers": [],
      "description": "Type checking without external dependencies"
    },
    "security": {
      "mcpServers": ["sequential-thinking"],
      "description": "Security analysis and vulnerability reasoning"
    }
  },
  "security": {
    "authentication": {
      "method": "api_key",
      "rotation": "30d"
    },
    "encryption": {
      "inTransit": true,
      "atRest": true,
      "algorithm": "AES-256-GCM"
    },
    "audit": {
      "logAllCalls": true,
      "retention": "90d",
      "sensitive": ["api_key", "token", "password"]
    }
  },
  "monitoring": {
    "metrics": [
      "call_count",
      "latency",
      "error_rate",
      "timeout_rate"
    ],
    "healthChecks": {
      "interval": 60000,
      "timeout": 5000,
      "failureThreshold": 3
    },
    "tracing": {
      "enabled": true,
      "sampler": "always",
      "exporter": "otlp"
    }
  }
}