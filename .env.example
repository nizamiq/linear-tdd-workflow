# Claude Agentic Workflow System Configuration
# Copy this file to .env and fill in your actual values

# ==============================================================================
# LINEAR INTEGRATION (Required)
# ==============================================================================

# Linear API Key - Get from: https://linear.app/settings/api
LINEAR_API_KEY=lin_api_your_key_here

# Linear Team ID - Find in Linear URL or team settings
LINEAR_TEAM_ID=your-team-id-here

# Linear Project ID (Optional) - Specific project within team
LINEAR_PROJECT_ID=

# Linear Task Prefix (Optional) - Default: CLEAN
LINEAR_TASK_PREFIX=CLEAN

# Linear Webhook Secret (Optional) - For webhook validation
LINEAR_WEBHOOK_SECRET=

# ==============================================================================
# ANTHROPIC / CLAUDE CONFIGURATION (Required for agents)
# ==============================================================================

# Anthropic API Key - Get from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-your_key_here

# Environment Settings
NODE_ENV=development
CLAUDE_ENVIRONMENT=development
LOG_LEVEL=info

# TDD Gate Enforcer Settings
TDD_MINIMUM_COVERAGE=80
TDD_MINIMUM_DIFF_COVERAGE=80
TDD_REQUIRE_FAILING_TEST_FIRST=true

# Webhook Server Settings
WEBHOOK_PORT=3000

# Agent Configuration
AGENT_MAX_CONCURRENT=5
AGENT_TIMEOUT=300000
AGENT_MEMORY_LIMIT=512

# ==============================================================================
# GITHUB / CI/CD CONFIGURATION (Required for pipeline operations)
# ==============================================================================

# GitHub Personal Access Token - Get from: https://github.com/settings/tokens
# Required scopes: repo, workflow, write:packages
GITHUB_TOKEN=ghp_your_token_here

# GitHub Repository - Format: owner/repo
GITHUB_REPOSITORY=

# GitHub Webhook Secret (Optional) - For webhook validation
GITHUB_WEBHOOK_SECRET=

# CI Provider - github, gitlab, circle
CI_PROVIDER=github

# CI Pipeline URL (Optional)
CI_PIPELINE_URL=

# Feature Flags
ENABLE_AUTO_FIX=true
ENABLE_TDD_ENFORCEMENT=true
ENABLE_GITFLOW=true

# Testing Configuration
MIN_COVERAGE_THRESHOLD=80
PARALLEL_TEST_JOBS=4

# ==============================================================================
# MONITORING & LOGGING
# ==============================================================================

# Monitoring
MONITORING_ENABLED=true
PERFORMANCE_TRACKING=true
ERROR_REPORTING=true

# ==============================================================================
# MCP SERVER CONFIGURATION (Optional)
# ==============================================================================

# MCP Server Port - Default: 3000
MCP_PORT=3000

# MCP Host - Default: localhost
MCP_HOST=localhost

# ==============================================================================
# PYTHON CONFIGURATION (For Python development support)
# ==============================================================================

# Python Version - Minimum: 3.12
PYTHON_VERSION=3.12

# Virtual Environment Path (Optional)
VENV_PATH=.venv

# ==============================================================================
# DEPLOYMENT CONFIGURATION (For /deploy command)
# ==============================================================================

# Deployment Environment - development, staging, production
DEPLOYMENT_ENV=development

# Deployment Strategy - canary, blue-green, rolling
DEPLOYMENT_STRATEGY=rolling

# Target Platform - gke, aks, eks, fly
DEPLOYMENT_TARGET=

# ==============================================================================
# NOTES
# ==============================================================================
#
# Required for Basic Operation:
#   - LINEAR_API_KEY
#   - LINEAR_TEAM_ID
#   - ANTHROPIC_API_KEY (for Claude Code agents)
#
# Required for CI/CD:
#   - GITHUB_TOKEN
#
# Security Best Practices:
#   1. Never commit .env to version control
#   2. Add .env to .gitignore
#   3. Rotate API keys regularly
#   4. Use different keys for dev/staging/prod
#   5. Limit API key scopes to minimum required
#
# Getting Help:
#   - See .claude/INTEGRATION-GUIDE.md for setup details
#   - See CLAUDE.md for Claude Code integration
#   - See docs/TROUBLESHOOTING.md (when created) for common issues