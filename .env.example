# Claude Agentic Workflow System Configuration
# Copy this file to .env and fill in your actual values

# Linear Integration
LINEAR_API_KEY=your_linear_api_key_here
LINEAR_TEAM_ID=a-coders
LINEAR_PROJECT_ID=ai-coding
LINEAR_WEBHOOK_SECRET=your_webhook_secret_here

# Environment Settings
NODE_ENV=development
CLAUDE_ENVIRONMENT=development
LOG_LEVEL=info

# TDD Gate Enforcer Settings
TDD_MINIMUM_COVERAGE=80
TDD_MINIMUM_DIFF_COVERAGE=80
TDD_REQUIRE_FAILING_TEST_FIRST=true

# Webhook Server Settings
WEBHOOK_PORT=3000

# Agent Configuration
AGENT_MAX_CONCURRENT=5
AGENT_TIMEOUT=300000
AGENT_MEMORY_LIMIT=512

# CI/CD Settings
CI_PROVIDER=github
CI_PIPELINE_URL=https://your-ci-pipeline.com
GITHUB_TOKEN=your_github_token_here
CI_WEBHOOK_SECRET=your_ci_webhook_secret_here

# Feature Flags
ENABLE_AUTO_FIX=true
ENABLE_TDD_ENFORCEMENT=true
ENABLE_GITFLOW=true

# Testing Configuration
MIN_COVERAGE_THRESHOLD=80
PARALLEL_TEST_JOBS=4

# Monitoring
MONITORING_ENABLED=true
PERFORMANCE_TRACKING=true
ERROR_REPORTING=true